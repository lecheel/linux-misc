0. cp /boot/config-`uname -r` .config
1. yes '' | make oldconfig
2. make menuconfig
3. make clean
4. make -j `getconf _NPROCESSORS_ONLN` deb-pkg LOCALVERSION=-custom
5. sudo dpkg -i linux-image-2.6.24-rc5-custom_2.6.24-rc5-custom-10.00.Custom_i386.deb

cd $HOME/linux
CONCURRENCY_LEVEL=`getconf _NPROCESSORS_ONLN` fakeroot make-kpkg --initrd --append-to-version=-custom --overlay-dir=$HOME/ubuntu-package kernel_image kernel_headers